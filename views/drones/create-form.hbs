<h2>Create a new drone</h2>

<form action="/drones/create" method="POST">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input name="inputName" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Propellers</label>
        <input name="inputPropellers" type="number" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Max Speed</label>
        <input name="inputMaxSpeed" type="number" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>