<h2>Available drones</h2>
{{#each drones}}
<h3>{{this.name}}</h3>
<div id="content">
    <div>Propellers: {{this.propellers}}</div>
    <div>Max Speed: {{this.maxSpeed}}</div>
</div>
<div id="btns">
    <a class="btn btn-primary" href="/drones/{{ this._id }}/edit">Edit</a>
    <form action="/drones/{{ this._id }}/delete" method="POST">
        <button type="submit" class="btn btn-primary">Delete</button>
    </form>
</div>
{{/each}}

<a href="/drones/create"><button type="submit" class="btn btn-primary" value="/drones/create">Add a new drone</button></a>